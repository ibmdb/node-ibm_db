{
  "compilerOptions": {
    "module": "node16",
    "lib": ["es6"],
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "strict": true /* Enable all strict type-checking options. */,
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts"],
  "exclude": ["Database.ts", "Options.ts", "Pool.ts"]
}
